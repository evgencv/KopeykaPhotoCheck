<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_activated"
    android:minHeight="72dp"
    >

    <CheckBox
        android:id="@+id/note_list_item_completeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
   
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/note_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/note_list_item_completeCheckBox"
        android:layout_toRightOf="@id/note_list_item_completeCheckBox"
        android:paddingLeft="4dp"
        android:paddingTop="7dp"
        android:paddingRight="4dp"
        android:text="@string/note_list_titleTitle"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/note_list_item_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_list_item_titleTextView"
        android:layout_toEndOf="@id/note_list_item_completeCheckBox"
        android:layout_toRightOf="@id/note_list_item_completeCheckBox"
        android:paddingLeft="4dp"
        android:paddingTop="7dp"
        android:paddingRight="4dp"
        android:paddingBottom="0dp"
        android:text="@string/note_list_titleDescr" />

</RelativeLayout>


